<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="50sp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cart_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="start"
            android:paddingStart="10sp"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="80sp"
            android:layout_height="5sp"
            android:layout_alignBottom="@id/cart_txt"
            android:layout_marginStart="20sp"
            android:background="@drawable/rounded_shape"
            android:fitsSystemWindows="true" />


    </RelativeLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_img_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-40sp"
        app:cardCornerRadius="150sp"
        app:cardElevation="9sp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1sp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/account" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_margin="10sp"
        app:cardCornerRadius="8sp"
        app:cardElevation="8sp"
        app:contentPaddingTop="65sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profile_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Ashish Zingade"
                android:textColor="#000000"
                android:textSize="25sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profile_userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="ashishzingade@gmail.com"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:background="@color/colorPrimaryDark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profile_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5sp"
                android:text="Orders"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:background="@color/colorPrimaryDark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profile_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5sp"
                android:text="eMart  Wallet"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:background="@color/colorPrimaryDark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profile_trend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5sp"
                android:text="Trending in Your Location"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:background="@color/colorPrimaryDark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profile_manage_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5sp"
                android:text="Manage Address"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:background="@color/colorPrimaryDark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profile_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5sp"
                android:text="Logout"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />


</RelativeLayout>